from PIL import Image, ImageDraw, ImageFont

# –†–∞–∑–º–µ—Ä –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è
width, height = 600, 200
img = Image.new("RGB", (width, height), color="white")
draw = ImageDraw.Draw(img)

# –ó–∞–≥—Ä—É–∑–∫–∞ —Å—Ç–∞–Ω–¥–∞—Ä—Ç–Ω–æ–≥–æ —à—Ä–∏—Ñ—Ç–∞
font = ImageFont.load_default()

# –ó–∞–≥–æ–ª–æ–≤–æ–∫ Hero-—Å–µ–∫—Ü–∏–∏
title = "üèÅ –î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å –≤ WebKurier"
subtitle = "–ê–≤—Ç–æ–º–∞—Ç–∏–∑–∞—Ü–∏—è. –ò–Ω—Ç–µ–ª–ª–µ–∫—Ç. –ë—É–¥—É—â–µ–µ."
button_text = "[ –ù–∞—á–∞—Ç—å ]"

# –û—Ç—Ä–∏—Å–æ–≤–∫–∞ —Ç–µ–∫—Å—Ç–∞
draw.text((20, 30), title, fill="black", font=font)
draw.text((20, 60), subtitle, fill="gray", font=font)

# –ö–Ω–æ–ø–∫–∞
button_x, button_y = 20, 100
button_w, button_h = 160, 40
draw.rectangle([button_x, button_y, button_x + button_w, button_y + button_h], fill="#007BFF", outline="black")
text_w, text_h = draw.textsize(button_text, font=font)
draw.text(
    (button_x + (button_w - text_w) // 2, button_y + (button_h - text_h) // 2),
    button_text,
    fill="white",
    font=font
)

# –°–æ—Ö—Ä–∞–Ω—è–µ–º
img.save("preview-hero.jpg", "JPEG")
print("‚úÖ –§–∞–π–ª preview-hero.jpg —É—Å–ø–µ—à–Ω–æ —Å–æ–∑–¥–∞–Ω.")