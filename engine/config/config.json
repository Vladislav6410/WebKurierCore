{
  "project": "WebKurierCore",
  "version": "1.0.0",
  "updated": "2025-10-16",
  "description": "Конфигурация ядра WebKurierCore — подключение агентов и инструментов",

  "modules": {
    "translator": {
      "name": "AI Translator",
      "path": "/engine/agents/translator/",
      "source": "local",
      "description": "Мультиязычный переводчик с автоопределением языка",
      "enabled": true
    },

    "wallet": {
      "name": "WebCoin Wallet",
      "path": "/engine/agents/wallet/",
      "source": "local",
      "description": "Кошелёк WebCoin и обменник",
      "enabled": true
    },

    "tools": {
      "name": "Tools Panel",
      "path": "/engine/agents/tools/",
      "source": "local",
      "description": "Панель инструментов для генерации HTML, шаблонов и экспорта",
      "enabled": true
    },

    "geodesist": {
      "name": "Geodesy Agent",
      "path": "/engine/agents/geodesist/",
      "source": "local",
      "description": "Цифровой помощник-геодезист: ортофото, 3D, отчёты, анализ NDVI",
      "enabled": true
    },

    "autopilot": {
      "name": "Drone Autopilot",
      "path": "/engine/agents/autopilot/",
      "source": "local",
      "description": "Автономное управление дроном через PX4/ArduPilot",
      "enabled": true
    },

    "ai_builder_demo": {
      "name": "AI Builder Demo",
      "path": "/engine/agents/tools/ai_builder_demo.zip",
      "source": "Dropbox",
      "description": "Демо-пакет AI Builder (index.html, ai-builder.js, templates.json)",
      "version": "1.0.0",
      "installed": true,
      "enabled": true
    }
  },

  "settings": {
    "language": "ru",
    "theme": "dark",
    "dropbox_sync": true,
    "telegram_bot": "@WebKurierBot",
    "memory_file": "/engine/memory/assistant_memory.json"
  }
}